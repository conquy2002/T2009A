<Page
    x:Class="UWP_018.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_018"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Horizontal">
        <SplitView x:Name="MYSplit" DisplayMode="CompactOverlay" >
            <SplitView.Pane>
                <StackPanel>
                    <TextBlock FontSize="48">1</TextBlock>
                    <TextBlock FontSize="48">2</TextBlock>
                    <TextBlock FontSize="48">3</TextBlock>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <StackPanel>
                    <TextBlock FontSize="48">4</TextBlock>
                    <TextBlock FontSize="48">5</TextBlock>
                    <TextBlock FontSize="48">6</TextBlock>
                </StackPanel>
            </SplitView.Content>
        </SplitView>
        <Button Content="click me" FontSize="48" Click="button_click"></Button>
    </StackPanel>
</Page>
